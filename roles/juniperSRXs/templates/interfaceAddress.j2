{% for item in interfacesToConfigure %}

{% if item.disable | default(False) %}
delete interfaces ge-0/0/{{ item.index }}
set interfaces ge-0/0/{{ item.index }} disable

{% elif item.unit > 0 %}
set interfaces ge-0/0/{{ item.index }} vlan-tagging
set interfaces ge-0/0/{{ item.index }} unit {{ item.unit }} vlan-id {{ item.unit }}
{% endif  %}

delete interfaces ge-0/0/{{ item.index }} disable

set interfaces ge-0/0/{{ item.index }} unit {{ item.unit }} family inet address {{ item.ipAddress }}/{{ item.mask }}
{% endfor %}
